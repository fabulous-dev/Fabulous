        {
            "path": "NewApp\\NewApp.fs"
        },
        {
            "condition": "CreateAndroidProject",
            "path": "NewApp.Android\\NewApp.Android.fsproj"
        },
        {
            "condition": "CreateiOSProject",
            "path": "NewApp.iOS\\NewApp.iOS.fsproj"
        }
